{
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    "removeComments": true,
    "jsx": "react",

    "sourceMap": true,
    "outDir": "build",

    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "skipLibCheck": true,

    "baseUrl": "node_modules"
  },

  "include": ["app/", "src/"]
}

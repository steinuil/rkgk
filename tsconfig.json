{
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    "removeComments": true,
    "jsx": "react",

    "sourceMap": true,
    "outDir": "build",

    "module": "es6",
    "target": "es2015",
    "moduleResolution": "node",
    "skipLibCheck": true,

    "baseUrl": "node_modules"
  },

  "include": ["src/"]
}
